/*create table*/
create table user_admin (
	no int not null auto_increment,
	id varchar(20) not null,
	name varchar(10) not null,
	password varchar(20) not null,
	type char(1) not null,
	class_no int not null,
	register_date datetime not null,
	primary key (no)
)ENGINE=InnoDB DEFAULT CHARSET=utf8;

create table user_student (
	no int not null auto_increment,
	id varchar(20) not null,
	password varchar(20) not null,
	name varchar(10) not null,
	age int,
	sex char(1),
	idcard_no varchar(30) not null,
	membership_no varchar(30) not null,
	class_no int not null,
	phone_no varchar(30) not null,
	telephone_no varchar(30),
	qq_no varchar(30),
	email varchar(30) not null,
	address varchar(100) not null,
	image varchar(100),
	type varchar(1) not null,
	register_date datetime not null,
	modify_date datetime not null,
	primary key (no)
)ENGINE=InnoDB DEFAULT CHARSET=utf8;

create table class (
	no int not null auto_increment,
	name varchar(10) not null,
	teacher_id varchar(100) not null,
	slogan varchar(200) not null,
	register_date datetime not null,
	modify_date datetime not null,
	primary key (no)
)ENGINE=InnoDB DEFAULT CHARSET=utf8;

alter table user_student modify column image varchar(100);
alter table user_student modify column idcard_no varchar(30);
alter table user_admin modify column name varchar(20);
alter table class modify column teacher_id varchar(100);